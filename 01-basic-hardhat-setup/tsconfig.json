{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@artifacts/*": ["./artifacts/src/contracts/*"],
      "@contract-types/*": ["./src/types/*"]
    }
  },

  "include": [
    "hardhat.config.ts",
    "./deploy",
    "./test",
  ]
}
